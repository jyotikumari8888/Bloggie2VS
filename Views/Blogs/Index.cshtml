@section Scripts {
    <script>
        const btnLikeElement = document.getElementById('btnLike');
        const totalLikeElement = document.getElementById('totalLikes');

        async function getTotalLikes() {
            const response = await fetch('/api/BlogPostLikes/@Model.Id/totalLikes', {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': '*/*'
                }
            });

            if (response.ok) {
                const result = await response.json();
                totalLikeElement.innerHTML = result; // Ensure `result` is the expected format
            } else {
                console.error('Failed to fetch total likes:', response.statusText);
            }
        }

        async function addLikeForBlog() {
            try {
                const response = await fetch('/api/BlogPostLike/Add', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': '*/*'
                    },
                    body: JSON.stringify({
                        blogPostId: '@Model.Id',
                        userId: '@userManager.GetUserId(User)'
                    })
                });

                // Check if the response is okay
                if (response.ok) {
                    btnLikeElement.innerHTML = '<i class="bi bi-hand-thumbs-up-fill"></i>';
                    btnLikeElement.removeEventListener('click', addLikeForBlog);
                    getTotalLikes();
                } else {
                    console.error('Failed to add like:', response.statusText);
                }
            } catch (error) {
                console.error('Error adding like:', error);
            }
        }

        btnLikeElement.addEventListener('click', addLikeForBlog);
    </script>
}
